<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.PetClinic" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowSplashScreenBackground">@color/tea_green</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="android:windowSplashScreenAnimationDuration">800</item>
        <item name="postSplashScreenTheme">@style/Theme.PetClinic</item>
    </style>

    <style name="Theme.PetClinic.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_header</item>
        <item name="android:padding">@dimen/margin_default_double</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/powder</item>
        <item name="android:lines">1</item>
    </style>

    <style name="CorneredImageView">
        <item name="cornerSize">15%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="Theme.PetClinic.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/powder</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">@dimen/margin_default_double_extended</item>
    </style>

    <dimen name="text_title">26sp</dimen>
</resources>